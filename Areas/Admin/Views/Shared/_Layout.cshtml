<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Khu vực Admin | Đồ công nghệ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.4/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link href="//cdn.datatables.net/2.1.8/css/dataTables.dataTables.min.css" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #4CAF50;
            --secondary-color: #45a049;
            --text-color: #333;
            --background-color: #f8f9fa;
            --white: #ffffff;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .header {
            background-color: var(--white);
            box-shadow: 0 2px 4px rgba(0,0,0,.08);
            padding: 15px 0;
        }

        .logo {
            font-size: 24px;
            font-weight: 700;
            color: var(--primary-color);
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .logo:hover {
                color: var(--secondary-color);
            }

        .search-box {
            position: relative;
        }

            .search-box input {
                width: 100%;
                padding: 10px 40px 10px 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
                transition: border-color 0.3s ease;
            }

                .search-box input:focus {
                    border-color: var(--primary-color);
                    outline: none;
                }

            .search-box button {
                position: absolute;
                right: 5px;
                top: 5px;
                background: none;
                border: none;
                font-size: 20px;
                color: var(--primary-color);
                cursor: pointer;
            }

        .nav-link {
            color: var(--text-color);
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: var(--primary-color);
            }

        .main-menu {
            background-color: var(--primary-color);
            padding: 0;
            overflow-x: auto;
        }

            .main-menu .nav {
                display: flex;
                flex-wrap: nowrap;
                -webkit-overflow-scrolling: touch;
            }

            .main-menu .nav-item {
                flex: 0 0 auto;
            }

            .main-menu .nav-link {
                color: var(--white);
                padding: 12px 10px;
                transition: background-color 0.3s ease;
                white-space: nowrap;
                font-size: 14px;
            }

                .main-menu .nav-link:hover {
                    background-color: var(--secondary-color);
                }

                .main-menu .nav-link i {
                    margin-right: 5px;
                }

        @@media (max-width: 1200px) {
            .main-menu .nav-link span

        {
            display: none;
        }

        .main-menu .nav-link i {
            margin-right: 0;
            font-size: 18px;
        }

        }

        @@media (max-width: 992px) {
            .main-menu .nav

        {
            justify-content: flex-start;
        }

        }

        .content-wrapper {
            background-color: var(--white);
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,.1);
            padding: 30px;
            margin-top: 30px;
        }

        .footer {
            background-color: var(--white);
            border-top: 1px solid #ddd;
            padding: 20px 0;
            margin-top: 40px;
        }

        .btn-custom {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: var(--white);
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: var(--secondary-color);
                border-color: var(--secondary-color);
                box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
            }

        .table {
            border-collapse: separate;
            border-spacing: 0;
        }

            .table th, .table td {
                border: none;
                padding: 12px;
                vertical-align: middle;
            }

        .table-hover tbody tr:hover {
            background-color: rgba(0,0,0,.075);
        }

        .btn-sm {
            padding: .25rem .5rem;
            font-size: .875rem;
            line-height: 1.5;
            border-radius: .2rem;
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <a href="/" class="logo"><i class="fas fa-laptop-code me-2"></i>Admin Đồ công nghệ</a>
                </div>
                <div class="col-md-6">
                    <div class="search-box">
                        <input type="text" placeholder="Tìm kiếm...">
                        <button type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="col-md-3">
                    <nav class="nav justify-content-end">
                        <a class="nav-link" href="#"><i class="fas fa-bell"></i></a>
                        <a class="nav-link" href="#"><i class="fas fa-envelope"></i></a>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <nav class="main-menu">
        <div class="container">
            <ul class="nav">
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="SanPham" asp-action="Index"><i class="fas fa-box"></i> <span>Sản phẩm</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="DashBoard" asp-action="Index"><i class="fas fa-chart-bar"></i> <span>Thống kê</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Shipping" asp-action="Index"><i class="fas fa-truck"></i> <span>Phí SHIP</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="TheLoai" asp-action="Index"><i class="fas fa-list"></i> <span>Thể loại</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="ThuongHieu" asp-action="Index"><i class="fas fa-trademark"></i> <span>Thương hiệu</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="DatHang" asp-action="Index"><i class="fas fa-shopping-cart"></i> <span>Đặt hàng</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="Index"><i class="fas fa-users"></i> <span>Quản lý User</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="PhanQuyen" asp-action="Index"><i class="fas fa-user-shield"></i> <span>Phân quyền</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Contact" asp-action="Index"><i class="fas fa-envelope"></i> <span>Liên hệ</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Coupon" asp-action="Index"><i class="fas fa-ticket-alt"></i> <span>Coupon</span></a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="UserActivities">
                            <i class="fas fa-user-clock"></i> <span>User Activities</span>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <main role="main" class="py-4">
        <div class="container-fluid">
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p class="text-center mb-0">&copy; 2023 Đồ công nghệ Admin. Tất cả quyền được bảo lưu.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/backend/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.4/dist/sweetalert2.all.min.js"></script>
    <script src="//cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://esgoo.net/scripts/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>

    <script>
        $(function () {
            var message = '@TempData["success"]';
            if (message !== '') {
                toastr.success(message, 'Thành công!');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>