@model IEnumerable<OrderViewModel>
@{
    ViewData["title"] = "Danh sách đặt hàng";
}

<div class="container-fluid mt-4">
    <h3 class="mb-4 text-center">Danh sách đặt hàng</h3>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã đặt hàng</th>
                            <th>Tên User</th>
                            <th>Mã giảm giá</th>
                            <th>Ngày tạo</th>
                            <th>Tình trạng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Order_Code</td>
                                <td>@item.UserName</td>
                                <td>@item.CouponCode</td>
                                <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <span class="badge bg-warning">Đơn hàng mới</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Đơn hàng thành công</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="ViewOrder" class="btn btn-info btn-sm" asp-controller="DatHang" asp-route-ordercode="@item.Order_Code">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>
                                    <a href="#" class="btn btn-danger btn-sm confirmDeletion" data-id="@item.Id">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </td>   
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    .table {
        border-collapse: separate;
        border-spacing: 0;
    }

        .table th, .table td {
            border: none;
            padding: 12px;
            vertical-align: middle;
        }

    .table-hover tbody tr:hover {
        background-color: rgba(0,0,0,.075);
    }

    .btn-sm {
        padding: .25rem .5rem;
        font-size: .875rem;
        line-height: 1.5;
        border-radius: .2rem;
    }

    .badge {
        font-size: 0.875em;
        padding: 0.35em 0.65em;
    }
</style>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('.confirmDeletion').click(function(e) {
                e.preventDefault();
                var id = $(this).data('id');

                Swal.fire({
                    title: 'Bạn có chắc chắn muốn xóa?',
                    text: "Bạn sẽ không thể hoàn tác hành động này!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Đồng ý, xóa!',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("Delete", "DatHang")',
                            type: 'POST',
                            data: { id: id },
                            success: function(result) {
                                if (result.success) {
                                    Swal.fire(
                                        'Đã xóa!',
                                        'Đơn hàng đã được xóa.',
                                        'success'
                                    ).then(() => {
                                        location.reload();
                                    });
                                } else {
                                    Swal.fire(
                                        'Lỗi!',
                                        result.message,
                                        'error'
                                    );
                                }
                            },
                            error: function() {
                                Swal.fire(
                                    'Lỗi!',
                                    'Có lỗi xảy ra khi xóa đơn hàng.',
                                    'error'
                                );
                            }
                        });
                    }
                });
            });
        });
    </script>
}



