@model LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}
<style>
    body {
        background-color: #f4f4f4;
        font-family: Arial, sans-serif;
    }

    .login-container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 30px;
    }

    .login-header {
        text-align: center;
        margin-bottom: 25px;
    }

        .login-header h1 {
            color: #333;
            font-size: 26px;
            margin-bottom: 8px;
        }

    .login-form .form-group {
        margin-bottom: 20px;
    }

    .login-form label {
        display: block;
        margin-bottom: 6px;
        color: #333;
        font-weight: bold;
    }

    .login-form input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
    }

    .login-form button {
        width: 100%;
        padding: 12px;
        background-color: #fdd504;
        border: none;
        border-radius: 4px;
        color: #333;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .login-form button:hover {
            background-color: #fcc500;
        }

    .google-login {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        padding: 12px;
        background-color: #dd4b39;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        margin-top: 15px;
        transition: background-color 0.3s ease;
    }

        .google-login:hover {
            background-color: #c23321;
            text-decoration: none;
        }

        .google-login img {
            width: 20px;
            height: 20px;
        }

    .text-danger {
        color: #d0021b;
        font-size: 14px;
        margin-top: 5px;
    }

    .signup-link, .forgot-password {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
    }

        .signup-link a, .forgot-password a {
            color: #288ad6;
            text-decoration: none;
        }

            .signup-link a:hover, .forgot-password a:hover {
                text-decoration: underline;
            }

    /* Styles for password toggle */
    .password-container {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 10px;
        top: 12px;
        cursor: pointer;
        color: #666;
        font-size: 16px;
    }

    /* Icon styles */
    .fa-eye, .fa-eye-slash {
        font-size: 16px;
    }
</style>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="login-container">
    <div class="login-header">
        <h1>Đăng nhập tài khoản</h1>
        <p>Vui lòng nhập thông tin đăng nhập của bạn</p>
    </div>
    <form asp-action="Login" asp-controller="Account" class="login-form" method="post">
        @Html.AntiForgeryToken()  @* Thêm anti-forgery token vào form đăng nhập thông thường *@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Username">Tên đăng nhập</label>
            <input asp-for="Username" placeholder="Nhập tên đăng nhập" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Mật khẩu</label>
            <div class="password-container">
                <input asp-for="Password" type="password" placeholder="Nhập mật khẩu" id="Password" />
                <span class="password-toggle" onclick="togglePassword('Password')">
                    <i class="fas fa-eye" id="togglePassword"></i>
                </span>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit">Đăng nhập</button>
    </form>
    <div class="forgot-password">
        <p><a asp-action="ForgotPassword">Quên mật khẩu?</a></p>
    </div>
    <div class="form-group">
        <a asp-action="GoogleLogin" class="btn btn-danger">
            <i class="fab fa-google"></i> Đăng nhập bằng Google
        </a>
    </div>

    <div class="signup-link">
        Chưa có tài khoản? <a asp-action="Create" asp-controller="Account">Đăng ký ngay</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Function to toggle password visibility
        function togglePassword(fieldId) {
            const passwordField = document.getElementById(fieldId);
            const icon = document.getElementById('toggle' + fieldId);

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
}