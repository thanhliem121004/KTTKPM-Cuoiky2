@model UserModel
@using reCAPTCHA.AspNetCore
@inject IRecaptchaService RecaptchaService
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<style>
    body {
        background-color: #f4f4f4;
        font-family: Arial, sans-serif;
    }

    .signup-container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 20px;
    }

    .signup-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .signup-header h1 {
            color: #333;
            font-size: 24px;
            margin-bottom: 10px;
        }

    .signup-form .form-group {
        margin-bottom: 20px;
    }

    .signup-form label {
        display: block;
        margin-bottom: 5px;
        color: #333;
        font-weight: bold;
    }

    .signup-form input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
    }

    .signup-form button {
        width: 100%;
        padding: 12px;
        background-color: #fdd504;
        border: none;
        border-radius: 4px;
        color: #333;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .signup-form button:hover {
            background-color: #fcc500;
        }

    .text-danger {
        color: #d0021b;
        font-size: 14px;
        margin-top: 5px;
    }

    .login-link {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
    }

        .login-link a {
            color: #288ad6;
            text-decoration: none;
        }

            .login-link a:hover {
                text-decoration: underline;
            }

    /* Styles for password toggle */
    .password-container {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 10px;
        top: 12px;
        cursor: pointer;
        color: #666;
        font-size: 16px;
    }

    /* Icon styles */
    .fa-eye, .fa-eye-slash {
        font-size: 16px;
    }
</style>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="signup-container">
    <div class="signup-header">
        <h1>Đăng ký tài khoản</h1>
        <p>Vui lòng nhập thông tin để tạo tài khoản mới</p>
    </div>

    <form asp-action="Create" asp-controller="Account" class="signup-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Username">Tên đăng nhập</label>
            <input asp-for="Username" placeholder="Nhập tên đăng nhập" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" placeholder="Nhập địa chỉ email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Mật khẩu</label>
            <div class="password-container">
                <input asp-for="Password" type="password" placeholder="Nhập mật khẩu" id="Password" />
                <span class="password-toggle" onclick="togglePassword('Password')">
                    <i class="fas fa-eye" id="togglePassword"></i>
                </span>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
            <div class="password-container">
                <input asp-for="ConfirmPassword" type="password" placeholder="Nhập lại mật khẩu" id="ConfirmPassword" />
                <span class="password-toggle" onclick="togglePassword('ConfirmPassword')">
                    <i class="fas fa-eye" id="toggleConfirmPassword"></i>
                </span>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <span id="message"></span>
        </div>

        <div class="g-recaptcha" data-sitekey="6LdGyzArAAAAAKNBO08N9dYDYV0Nwm49nUrnwYyQ"></div>
        <button type="submit">Đăng ký</button>
    </form>

    <div class="login-link">
        Đã có tài khoản? <a href="/Account/Login">Đăng nhập ngay</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('#Password, #ConfirmPassword').on('keyup', function () {
                if ($('#Password').val() == $('#ConfirmPassword').val()) {
                    $('#message').html('Mật khẩu khớp').css('color', 'green');
                } else
                    $('#message').html('Mật khẩu không khớp').css('color', 'red');
            });
        });

        // Function to toggle password visibility
        function togglePassword(fieldId) {
            const passwordField = document.getElementById(fieldId);
            const icon = document.getElementById('toggle' + fieldId);

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
}