@{
    ViewData["Title"] = "Tài khoản không tồn tại";
}

<div class="forgot-password-confirmation">
    <div class="confirmation-box">
        <h2>@ViewData["Title"]</h2>
        <div class="icon-container">
            <i class="fas fa-envelope"></i>
        </div>
        <p>
            Tài khoản không tồn tại
        </p>
        <a asp-action="Login" asp-controller="Account" class="btn btn-primary">Quay lại đăng nhập</a>
    </div>
</div>

<style>
    .forgot-password-confirmation {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
    }

    .confirmation-box {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        padding: 30px;
        text-align: center;
        max-width: 400px;
        width: 100%;
    }

    .confirmation-box h2 {
        color: #333;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .icon-container {
        margin: 20px 0;
    }

    .icon-container i {
        font-size: 48px;
        color: #fdd504;
    }

    .confirmation-box p {
        color: #555;
        font-size: 16px;
        line-height: 1.5;
        margin-bottom: 20px;
    }

    .small-text {
        font-size: 14px;
        color: #777;
    }

    .btn-primary {
        background-color: #fdd504;
        border: none;
        color: #333;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s ease;
        display: inline-block;
        margin-top: 20px;
    }

    .btn-primary:hover {
        background-color: #fcc500;
        color: #333;
    }

    @@media (max-width: 480px) {
        .confirmation-box {
            margin: 20px;
        }
    }
</style>