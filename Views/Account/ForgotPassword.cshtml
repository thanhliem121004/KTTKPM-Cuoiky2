@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="forgot-password-container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="ForgotPassword" method="post" class="forgot-password-form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email của bạn" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Gửi link đặt lại mật khẩu</button>
    </form>
</div>

<style>
    .forgot-password-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .forgot-password-container h2 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
        font-size: 24px;
    }

    .forgot-password-form .form-group {
        margin-bottom: 20px;
    }

    .forgot-password-form label {
        display: block;
        margin-bottom: 5px;
        color: #555;
        font-weight: bold;
    }

    .forgot-password-form input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
    }

    .forgot-password-form button {
        width: 100%;
        padding: 12px;
        background-color: #fdd504;
        border: none;
        border-radius: 4px;
        color: #333;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .forgot-password-form button:hover {
        background-color: #fcc500;
    }

    .text-danger {
        color: #dc3545;
        font-size: 14px;
        margin-top: 5px;
    }

    /* Responsive design */
    @@media (max-width: 480px) {
        .forgot-password-container {
            max-width: 100%;
            margin: 20px;
        }
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}